apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: {{ onepassword_operator_deploy_app_name }}
  namespace: {{ onepassword_operator_deploy_argocd_namespace }}
spec:
  project: {{ onepassword_operator_deploy_project }}
  source:
    repoURL: {{ onepassword_operator_deploy_helm_repo_url }}
    chart: {{ onepassword_operator_deploy_chart }}
    targetRevision: "{{ onepassword_operator_deploy_chart_version }}"
    helm:
      valuesObject:
        connect:
          create: true
          credentials_base64: "{{ onepassword_operator_deploy_connect_credentials_normalized | to_nice_json | b64encode }}"
          serviceType: ClusterIP
          ingress:
            enabled: false
        operator:
          create: true
          token:
            value: "{{ onepassword_operator_deploy_operator_token }}"
  destination:
    server: https://kubernetes.default.svc
    namespace: {{ onepassword_operator_deploy_namespace }}
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - CreateNamespace=true
