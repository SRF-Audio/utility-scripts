apiVersion: apps/v1
kind: Deployment
metadata:
  name: paperless-ngx-gotenberg
  namespace: {{ paperless_ngx_deploy_namespace }}
  labels:
    app.kubernetes.io/name: paperless-ngx
    app.kubernetes.io/component: gotenberg
    app.kubernetes.io/managed-by: ansible
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: paperless-ngx
      app.kubernetes.io/component: gotenberg
  template:
    metadata:
      labels:
        app.kubernetes.io/name: paperless-ngx
        app.kubernetes.io/component: gotenberg
    spec:
      containers:
        - name: gotenberg
          image: {{ paperless_ngx_deploy_gotenberg_image }}:{{ paperless_ngx_deploy_gotenberg_tag }}
          ports:
            - containerPort: 3000
              name: gotenberg
          command:
            - gotenberg
            - --chromium-disable-javascript=true
            - --chromium-allow-list=file:///tmp/.*
          resources:
            requests:
              memory: "256Mi"
              cpu: "100m"
            limits:
              memory: "1Gi"
              cpu: "1"
          livenessProbe:
            httpGet:
              path: /health
              port: 3000
            initialDelaySeconds: 30
            periodSeconds: 30
          readinessProbe:
            httpGet:
              path: /health
              port: 3000
            initialDelaySeconds: 10
            periodSeconds: 10
---
apiVersion: v1
kind: Service
metadata:
  name: paperless-ngx-gotenberg
  namespace: {{ paperless_ngx_deploy_namespace }}
  labels:
    app.kubernetes.io/name: paperless-ngx
    app.kubernetes.io/component: gotenberg
    app.kubernetes.io/managed-by: ansible
spec:
  type: ClusterIP
  ports:
    - port: 3000
      targetPort: 3000
      name: gotenberg
  selector:
    app.kubernetes.io/name: paperless-ngx
    app.kubernetes.io/component: gotenberg
