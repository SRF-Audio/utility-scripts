apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: crafty-controller-backups
  namespace: {{ crafty_controller_deploy_namespace }}
  labels:
    app: crafty-controller
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: synology-csi-nfs-delete
  resources:
    requests:
      storage: 20Gi
