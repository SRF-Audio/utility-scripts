apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: longhorn-homepage
  namespace: infra-longhorn
  annotations:
    gethomepage.dev/enabled: "true"
    gethomepage.dev/name: "Longhorn"
    gethomepage.dev/description: "Distributed block storage"
    gethomepage.dev/group: "Storage"
    gethomepage.dev/icon: "longhorn.png"
    gethomepage.dev/widget.type: "longhorn"
    gethomepage.dev/widget.url: "https://longhorn.rohu-shark.ts.net"
spec:
  rules:
    - host: longhorn
      http:
        paths:
          - path: /
            pathType: Prefix
            backend:
              service:
                name: longhorn-frontend
                port:
                  number: 80
